<?xml version="1.0" encoding="UTF-8"?>
<module>
	<name>galleria</name>
	<version>1.1.0</version>
	<requirements>
		<minimum_version>3.5.0</minimum_version>
	</requirements>
	<description>
		<![CDATA[
			The all-in-one image gallery.
		]]>
	</description>
	<authors>
		<author>
			<name><![CDATA[John Poelman]]></name>
			<url><![CDATA[http://www.bloobz.be]]></url>
		</author>
        <author>
            <name><![CDATA[Waldo Cosman (waldo@comsa.be)]]></name>
            <url><![CDATA[http://www.comsa.be]]></url>
        </author>
	</authors>
	<events>
		<event application="backend" name="after_saved_settings"><![CDATA[Triggered when the settings are saved.]]></event>
        <event application="backend" name="after_add_album"><![CDATA[Triggered when an album is added.]]></event>
        <event application="backend" name="after_delete_album"><![CDATA[Triggered when an album is deleted.]]></event>
        <event application="backend" name="after_edit_album"><![CDATA[Triggered when an album is edited.]]></event>
        <event application="backend" name="after_add_category"><![CDATA[Triggered when a category is added.]]></event>
        <event application="backend" name="after_delete_category"><![CDATA[Triggered when a category is deleted.]]></event>
        <event application="backend" name="after_edit_category"><![CDATA[Triggered when a category is edited.]]></event>
	</events>
</module>